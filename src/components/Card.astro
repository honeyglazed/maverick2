---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
	title: string;
	img: ImageMetadata;
	href?: string;
}

const { href, title, img } = Astro.props;
---

<m-card class="relative hover:scale-105 ease-out duration-300 hover:cursor-pointer" data-href={href}>
	<Image src={img} alt={"at"} width={500} />
	<div class="m-2 z-10 flex place-items-end inset-0 absolute transition-opacity opacity-0 hover:opacity-100">
		<p
			class="grow rounded-lg p-2 text-center text-black font-sans text-xl bg-white/50"
		>
			{title}
		</p>
	</div>
</m-card>

<script>
	class Card extends HTMLElement {
		constructor() {
			super();
			if (this.dataset.href) {
				const href: string = this.dataset.href;
				this.onclick = ((event) => { 
					window.location.assign(href); 
				});
			}
		}
	}

	customElements.define('m-card', Card);
</script>
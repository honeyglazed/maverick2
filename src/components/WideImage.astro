---
import { Image } from 'astro:assets'
import type { ImageMetadata } from "astro";

export interface Props {
    img: ImageMetadata;
}

const { img } = Astro.props;
---

<style>
    img {
        @apply rounded-3xl drop-shadow-lg object-cover
    }
</style>

<div class="mx-auto h-auto max-w-full">
    <Image src={img} alt={"picture"}/>
</div>

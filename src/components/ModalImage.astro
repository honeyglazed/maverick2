---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
	img: ImageMetadata;
}

const { img } = Astro.props;
---

<style>
    img {
        @apply rounded-3xl drop-shadow-lg object-cover
    }
</style>

<modal-image class="h-auto max-w-full">
	<Image src={img} alt={"at"}/>
    <div id="modal" class="hidden absolute inset-0 z-10 w-full h-full bg-gray-400/75">
	    <Image src={img} alt={"at"} width={1000} />
    </div>
</modal-image>

<script>
    class ModalImage extends HTMLElement {
        constructor() {
            super();
            var modal: HTMLElement = this.querySelector('#modal')!;
        }
    }
    customElements.define("modal-image", ModalImage);
</script>
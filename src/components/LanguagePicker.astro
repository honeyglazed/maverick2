<button
    id="language-toggle"
    type="button"
    class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg text-sm"
>
    <span id="language-toggle-icon">EN | ä¸­</span>
</button>

<script>

// Hacky. Fix this to be generic.
var toggle = document.getElementById('language-toggle');
toggle.addEventListener('click', function() {
    const pathname = window.location.pathname;
    if (pathname.includes("/en")) {
        window.location.href = pathname.replace('/en', '/cn');
    } else {
        window.location.href = pathname.replace('/cn', '/en');
    }
});
</script>
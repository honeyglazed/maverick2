---
import { useTranslations, getLangFromUrl } from "../../i18n/translations";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
    return [{ params: { lang: "en" } }, { params: { lang: "cn" } }];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Contact">
    <main class="max-w-3x mx-auto py-12 min-h-screen bg-off-white">
        <div class="container mx-auto px-2 md:px-0">
            <ul>
                <li>{t("social.wechat")}</li>
                <li>
                    {t("social.red")}: <span class="font-bold hover:underline"
                        ><a
                            href="https://www.xiaohongshu.com/user/profile/5ffc72e0000000000101cd8b"
                            >MAVERICK玫瑰园野花</a
                        ></span
                    >
                </li>
                <li>
                    {t("social.tb")}: <span class="font-bold hover:underline"
                        ><a href="https://m.tb.cn/h.UAHbUuOCZ0001">MAVERICK_</a></span
                    >
                </li>
                <li>
                    {t("social.ig")}: <span class="font-bold hover:underline"
                        ><a
                            href="https://www.instagram.com/maverick.onlineshop/"
                            >maverick.onlineshop</a
                        ></span
                    >
                </li>
            </ul>
        </div>
    </main>
</Layout>
